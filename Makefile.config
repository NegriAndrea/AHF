#------------------------------------------------------------------#
# Set environment for the system                                   #
#------------------------------------------------------------------#
LIB_HDF5	=	-L/Users/aknebe/bin/hdf5/lib -lhdf5
INC_HDF5	=	-I/Users/aknebe/bin/hdf5/include -DH5_USE_16_API

ifeq ($(SYSTEM), "Standard SQL")
	CC         	=	gcc -std=c99 -fopenmp
	FC 	      	=	gfortran
	OPTIMIZE	=	-O2
	CCFLAGS		=	
	LNFLAGS		=	-lsqlite3 
	DEFINEFLAGS	+=	-DWITH_OPENMP -DAHF_SQL
	MAKE		=	make
endif

ifeq ($(SYSTEM), "Standard OpenMP")
	CC         	=	gcc -std=c99 -fopenmp 
	FC 	      	=	gfortran
	OPTIMIZE	=	-O2
	CCFLAGS		=	
	LNFLAGS		=	 
	DEFINEFLAGS	+=	-DWITH_OPENMP 
	MAKE		=	make
endif

ifeq ($(SYSTEM), "Standard Serial")
	CC              =       gcc -std=c99 -g -fopenmp
	FC              =       gfortran
	OPTIMIZE        =       -O2
	CCFLAGS         =       
	LNFLAGS         =	
	MAKE            =       make
endif

ifeq ($(SYSTEM), "Standard MPI")
	CC         	=	mpicc -std=c99 -Wall -W -fopenmp
	FC         	=	mpif90
	OPTIMIZE	=	-O2
	CCFLAGS         =       ${INC_HDF5}
	LNFLAGS         =       ${LIB_HDF5}
	DEFINEFLAGS	+=	-DWITH_MPI
	MAKE		=	make
endif

ifeq ($(SYSTEM), "Standard MPI+OpenMP")
	CC         	=	mpicc -std=c99 -Wall -W -fopenmp
	FC         	=	g77
	OPTIMIZE	=	-O2
	CCFLAGS         =       ${INC_HDF5}
	LNFLAGS         =       ${LIB_HDF5} 

	DEFINEFLAGS	+=	-DWITH_MPI -DWITH_OPENMP
	MAKE		=	make
endif

ifeq ($(SYSTEM), "SuperMUC")
	CC	        =       mpicc -compiler gcc -m64 -mcmodel=large -std=c99 -Wall -W -fopenmp
	FC       	=	g77
	OPTIMIZE	=	-O2 
	CCFLAGS         =       ${INC_HDF5}
	LNFLAGS         =       ${LIB_HDF5}
	DEFINEFLAGS	+=	-DWITH_MPI -DWITH_OPENMP
	MAKE		=	make
endif

ifeq ($(SYSTEM), "Debug")
	CC         	=	gcc -std=c99 -g -fopenmp
	FC 	      	=	g95
	OPTIMIZE	=	-O2 
	CCFLAGS		=	-g 
#Compile and link with -pg flag for Gprof
	CCFLAGS		+=	-pg
	LNFLAGS		=	-pg
	DEFINEFLAGS	+=	
	MAKE		=	make
endif
